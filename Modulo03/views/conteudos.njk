{% extends "layout.njk" %}

{% block head %}{% endblock %}

{% block content %}

    <section class="cards">

        {%for item in items%}
            <div class="card" id="{{item.id}}">
                <div class="card_image-container {{ 'featured-wrapper' if item.featured}} ">
                    <img src="{{item.image}}" alt="logo de {{item.titulo}}">
                    {% if item.featured %}
                        <div class="featured">Featured</div>
                        {%endif%}
                    </div>
                    <div class="card_info">
                        <p class="card_titulo">{{item.titulo}}</p>
                        <p class="card_autor">{{item.autor}}
                        </p>
                        <p class="card_tempo">{{item.tempo}}
                        </p>
                    </div>
                </div>
                {%endfor%}

            </section>

            <script src="/scripts.js"></script>

        {% endblock %}