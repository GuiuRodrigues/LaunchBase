{% extends "layout.njk" %}

    {% block head %} {% endblock %}
    
{% block content %}

    <section class="cards">
        
       {%for item in items%}
        <div class="card" id="{{item.id}}">
            <div class="card_image-container">
                <img src="{{item.image}}" alt="logo de {{item.titulo}}">
            </div>
            <div class="card_info">
                <p class="card_titulo">{{item.titulo}}</p>
                <p class="card_autor">{{item.autor}} </p>
                <p class="card_tempo">{{item.tempo}} </p>
            </div>
        </div>
            {%endfor%}

            
        </section>

        <div class="modal_overlay">
            <div class="modal">
                <a class="close-modal">
                    <i class="material-icons">close</i>
                </a>
                <a class="maximize-modal">
                    <i class="material-icons">fullscreen</i>
                </a>

                <div class="modal-content">
                    <iframe src="https://blog.rocketseat.com.br/" frameboder="0"></iframe>

                </div>

            </div>
        </div>
        
    <script src="scripts.js"></script>



{% endblock %}

